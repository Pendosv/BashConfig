# vim: ft=zsh

_so() {
    [ -r "${1}" ] && [ -f "${1}" ] && source "${1}"
}



_so "${ZDOTDIR}/export"
_so "${ZDOTDIR}/hosts/${HOST}"

_so "${ZDOTDIR}/options"
_so "${ZDOTDIR}/completion"
_so "${ZDOTDIR}/history"
_so "${ZDOTDIR}/prompt"
_so "${ZDOTDIR}/other"
_so "${ZDOTDIR}/aliases"
_so "${ZDOTDIR}/functions"

_so "${ZDOTDIR}/plugin"

_so "${ZDOTDIR}/mappings"

_so "${ZDOTDIR}/calculator"

_sod "${ZDOTDIR}/zshrc.d"