alias -g L='| bash -c "$PAGER"'
alias -g HL='| highlight -O ansi -S '
alias -g CL=" --color=always | less -R"
alias -g OUT="1>/dev/null"  # stdOUT
alias -g ERR="2>/dev/null"  # stdERR
alias -g ALL="1>/dev/null 2>&1"
alias -g BG="&>/dev/null &"
alias -g MOD='$(git diff --name-only --relative --diff-filter="acdr" | tr "\n" " ")'

alias -s mp4='vlc'
alias -s mp3='audacious'
alias -s flac='audacious'

bindkey '`' autosuggest-accept
