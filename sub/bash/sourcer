
_so () {
    [ -r "$1" ] && source "$1"
}

if [[ $0 == *bash ]]; then
    _so "$HOME"/.subbash/export
    _so "$HOME"/.subbash/shopt
fi

if [[ $- == *i* ]]; then
    _so "$HOME"/.subbash/prompt
    _so "$HOME"/.subbash/aliases
    _so "$HOME"/.subbash/functions
    _so "$HOME"/.subbash/completion
fi


_sod "$HOME"/.subbash/bashrc.d
